<!-- card_inventory_item.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top row: name + delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/cardItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item Name"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:maxLines="2"
                android:ellipsize="end"/>

            <ImageButton
                android:id="@+id/deleteItem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_remove" />
        </LinearLayout>

        <!-- Quantity and Price row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/cardItemQty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Qty: 0"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>

            <TextView
                android:id="@+id/cardItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Category chip (optional, shown if category exists) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/cardItemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:chipMinHeight="24dp"
            app:textStartPadding="8dp"
            app:textEndPadding="8dp"
            style="@style/Widget.Material3.Chip.Suggestion"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
